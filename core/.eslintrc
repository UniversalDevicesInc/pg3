{
  "root": true,
  "env": {
    "node": true,
    "jest/globals": true
  },
  "extends": ["plugin:node/recommended", "airbnb-base", "plugin:jest/recommended", "prettier"],
  "plugins": ["prettier", "jest", "node"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "space-before-function-paren": [0, "never"],
    "global-require": [0, "never"]
  }
}
